<Window x:Class="LaboratoryWork.OOP._3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryWork.OOP._3"
        mc:Ignorable="d"
       Title="Student Grades" Height="350" Width="450">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Label Content="Имя:" Grid.Row="0"/>
		<TextBox x:Name="nameTextBox" Grid.Row="0" Width="100" Margin="5"/>

		<Label Content="Математика:" Grid.Row="1"/>
		<TextBox x:Name="mathTextBox" Grid.Row="1" Width="100" Margin="5"/>

		<Label Content="Физика:" Grid.Row="2"/>
		<TextBox x:Name="physicsTextBox" Grid.Row="2" Width="100" Margin="5"/>

		<Label Content="Русский:" Grid.Row="3"/>
		<TextBox x:Name="russianTextBox" Grid.Row="3" Width="100" Margin="5"/>

		<Button x:Name="addButton" Grid.Row="4" Content="Добавить в список" Width="150" Height="30" Margin="5" Click="AddButton_Click"/>

		<ListBox x:Name="studentsListBox" Grid.Row="4" Margin="5"/>
	</Grid>
</Window>
